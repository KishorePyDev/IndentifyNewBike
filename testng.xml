<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Test Suite">
 	 <test thread-count="5" name="Smoke Suite">
 	<!-- Here we change the browser name chrome/firefox -->
 	<parameter name="browserName" value="chrome"></parameter>
		<groups>
			<run>
				<include name="Smoke Suite"></include>
			</run>
		</groups>
		<classes>
			<class name="com.IndentifyNewBike.Test.UpcomingBikes" />
			<class name="com.IndentifyNewBike.Test.UsedCarsTest" />
			<class name="com.IndentifyNewBike.Test.loginTest" />
		</classes>
	</test>

	<test thread-count="4" name="Regression Suite">
	<!-- Here we change the browser name chrome/firefox -->
	<parameter name="browserName" value="chrome"></parameter>
		<groups>
			<run>
				<include name="Regression Suite"></include>
			</run>
		</groups>
		<classes>
			<class name="com.IndentifyNewBike.Test.UpcomingBikes" /> 
			<class name="com.IndentifyNewBike.Test.UsedCarsTest" />
			<class name="com.IndentifyNewBike.Test.loginTest" />

		</classes>
	</test>

</suite> 
